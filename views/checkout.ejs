<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Freaky Fashion</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="stylesheets\style.css">
    <title><%= title %></title>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".footer-section h3").forEach(header => {
                header.addEventListener("click", function () {
                    this.parentElement.classList.toggle("active");
                });
            });
        });
    </script>
    
</head>

<body>

    <!-- HEADER -->
    <%- include('partials/header') %>
    <!-- Kassa -->
    <main class="checkout-container">
        <h1>Kassan</h1>
        <section class="cart-summary">
            <div class="cart-summary-row">
                <div class="cart-summary-item">
                    <p class="bold">1 x Svart T-Shirt </p>
                    <p>199 SEK</p>
                </div>
                <div class="cart-summary-price">
                    <p class="bold">199 SEK</p>
                </div>
            </div>
            <div class="cart-summary-row">
                <div class="cart-summary-item">
                    <p class="bold">1 x Svart T-Shirt </p>
                    <p>199 SEK</p>
                </div>
                <div class="cart-summary-price">
                    <p class="bold">199 SEK</p>
                </div>
            </div>
        </section>


        <section class="cart-summary-tab">
            <table>
                <thead>
                    <tr>
                        <th>Produkt</th>
                        <th>Antal</th>
                        <th>Pris</th>
                        <th>Totalt</th>
                    </tr>
                </thead>
                <tbody>
                    <% cart.forEach(item => { %>
                        <tr>
                            <td><%= item.name %></td>
                            <td><%= item.quantity %></td>
                            <td><%= item.price %> SEK</td>
                            <td><%= (item.price * item.quantity).toFixed(2) %> SEK</td>
                        </tr>
                    <% }) %>
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3"><strong>Totalt</strong></td>
                        <td><strong><%= total.toFixed(2) %> SEK</strong></td>
                    </tr>
                </tfoot>
            </table>
        </section>
        
        <section class="customer-info">
            <h2>Kunduppgifter</h2>
            <form method="POST" action="/checkout">
                <div class="form-group form-group-name">
                    <label for="firstname">
                        <input type="text" name="firstname" placeholder="Förnamn">
                    </label>
                    <label for="lastname">
                        <input type="text" name="lastname" placeholder="Efternamn">
                    </label>
                </div>
                <div class="form-group-row">
                    <input type="email" name="email" placeholder="E-post">
                </div>
                <fieldset class="address-fieldset">
                    <legend>Adress</legend>
                    <input class="form-group-row" type="text" name="street" placeholder="Gata">
                    <div class="form-group">
                        <input type="text" name="postal" placeholder="Postnummer">
                        <input type="text" name="city" placeholder="Stad">
                    </div>
                </fieldset>
                <label class="newsletter-label">
                    <input type="checkbox" name="newsletter" class="newsletter-checkbox"> Jag vill ta emot nyhetsbrev
                </label>
                <button type="submit" class="checkout-button">Köp</button>
            </form>
        </section>
    </main>
    

    <%- include('partials/footer') %>

</body>
</html>